{
  "server": {
    "name": "agi-mcp-server",
    "version": "0.1.0"
  },
  "memory": {
    "database_path": "./agi_memory.db",
    "max_memories_per_search": 50,
    "confidence_threshold": 0.1,
    "emotional_weight_decay": 0.99,
    "relationship_bond_increment": 0.01
  },
  "reasoning": {
    "max_iterations": 100,
    "confidence_threshold": 0.3,
    "rule_success_threshold": 0.7,
    "enable_uncertainty_propagation": true
  },
  "reflection": {
    "max_depth_levels": {
      "surface": 1,
      "deep": 3,
      "philosophical": 5
    },
    "enable_meta_cognition": true,
    "bias_detection": true
  },
  "safety": {
    "enable_value_alignment_check": true,
    "require_human_oversight": false,
    "max_autonomous_actions": 10,
    "transparency_required": true
  },
  "logging": {
    "level": "info",
    "log_memory_operations": true,
    "log_reasoning_steps": true,
    "log_reflections": true
  }
}
